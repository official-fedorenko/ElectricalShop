# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/lesselectrical-shop
# For production on Render.com, use MongoDB Atlas connection string
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lesselectrical-shop?retryWrites=true&w=majority

# JWT Secret (change this in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (optional, for email verification)
EMAIL_FROM=noreply@lesselectrical.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL
CLIENT_URL=http://localhost:5174
# For production
# CLIENT_URL=https://your-frontend-domain.com
